    "def cross_validation_compas(compas_pipe, X_train, y_train):\n",
    "# YOUR CODE HERE\n",
    "        \n",
    "    score = cross_val_score(compas_pipe, X_train, y_train, cv = 5, scoring='roc_auc').mean()\n",
    "    \n",
    "    return(float(score))"
